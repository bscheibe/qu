                        i.heart.icon
                    a.inline.header(data-bind="attr: { href: $data.link, title: $data.titleText }, text: $data.titleText" target="_blank")
                    span &nbsp;-&nbsp;
                    span(data-bind="text: $data.full ? 'Full' : 'Open', css: { 'red-text': $data.full, 'green-text': !$data.full }")
                    .description(data-bind="text: $data.profLocationText")
                    .descriptionMW(data-bind="text: $data.timeText")
              h4.ui.horizontal.divider.header(data-bind="ifnot: tests().length")
                i.bullseye.icon
                | No Test Matches
          #courseCalendar.ui.bottom.attached.tab.segment
            #calendar

