                        i.mail.icon
                      .ui.icon.button.compact(data-bind="click: function(data, event) { $parent.like(data, event) }",
                        data-content="Show some love for the courses you've enjoyed!")
                        i.heart.icon
                    a.inline.header(data-bind="attr: { href: $data.link, title: $data.titleText }, text: $data.titleText" target="_blank")
                    span &nbsp;-&nbsp;
                    span(data-bind="text: $data.full ? 'Full' : 'Open', css: { 'red-text': $data.full, 'green-text': !$data.full }")
                    .description(data-bind="text: $data.profLocationText")
                    .descriptionMW(data-bind="text: $data.timeText")
              h4.ui.horizontal.divider.header(data-bind="ifnot: labs().length")
                i.bullseye.icon
                | No Lab Matches

            .ui.container.small-margin-top(data-bind="if: searched()")
              h4.ui.horizontal.divider.header(data-bind="if: tutorials().length")
                i.bullseye.icon
                span.align-icon-text(data-bind="text: tutorialMatches")
              .ui.relaxed.divided.list(data-bind="foreach: tutorials")
